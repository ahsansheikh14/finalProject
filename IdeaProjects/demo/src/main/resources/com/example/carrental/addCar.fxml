<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.carrental.controllers.addCarController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Add New Car" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <TextField fx:id="makeField" promptText="Make"/>
    <TextField fx:id="modelField" promptText="Model"/>
    <TextField fx:id="yearField" promptText="Year"/>
    <TextField fx:id="priceField" promptText="Price per day"/>
    <Button fx:id="submitButton" text="Add Car" onAction="#handleAddCar"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    <Label fx:id="statusLabel" wrapText="true"/>
</VBox>